<head>
  <link rel="stylesheet" href="../public/css/style.css"></link>

  <script   src="https://code.jquery.com/jquery-2.2.2.min.js"   integrity="sha256-36cp2Co+/62rEAAYHLmRCPIych47CvdM+uTBJwSzWjI="   crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.18.2/TweenMax.min.js"></script>
</head>

<h1 id="title">Galactic Long. < 10° and >-10°</h1>
<h4>Scale 100px = 1 PC &#8594;<div style="border-left: 2px solid #000; height: 10px;display: inline-block; margin-left: 10px"></div><div style="width: 100px; height: 4px; border-top: 2px solid #000; display: inline-block;"></div><div style="border-left: 2px solid #000; height: 10px;display: inline-block;"></div></h4>
<h4>Total # Stars Measured: <div id="starCount" style="display: inline"></div></h4>

<div id="sun"></div>
<div id="galacticCenter"></div>

<div id="gradientKey">
  <h1>-2.5</h1>
  <h2>0</h3>
  <h3>2.5</h3>
</div>


<script>

  TweenMax.to("#galacticCenter", 0, {x: 850})

  var counter = 1;

$.ajax({
          url:'/getLongitude',
          dataType:"json",
          cache: false,
          success: function(data){

              $('#starCount').append('<h2 style="display:inline">'+data.length+'</h2>')

              for(var i=0; i < data.length; i++){
                $('body').append('<div id=data' + i + ' class="dataPoint">');
                $('#data'+i).attr('style', 'transform:translateX('+data[i].posX+'px) translateY('+data[i].posY+'px); -webkit-transform:translateX('+data[i].posX+'px) translateY('+data[i].posY+'px); background-color:'+data[i].color);
              }

          }.bind(this),
          error: function(xhr, status, err){
              console.error('url', status, err.toString());
          }.bind(this)
      });
</script>
